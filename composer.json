{
    "name": "zalas/toolbox",
    "description": "Helps to discover and install tools",
    "type": "project",
    "require": {
        "php": "~8.0.0 || ~8.1.0 || ~8.2.0",
        "symfony/console": "^4.4 || ^5.4 || ^6.1",
        "psr/container": "^1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "zalas/phpunit-globals": "^2.1",
        "phpspec/prophecy-phpunit": "^2.0",
        "infection/infection": "^0.26"
    },
    "autoload": {
        "psr-4": {
            "Zalas\\Toolbox\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Zalas\\Toolbox\\Tests\\": "tests"
        }
    },
    "license": "MIT",
    "authors": [
        {
            "name": "Jakub Zalas",
            "email": "jakub@zalas.pl"
        }
    ],
    "extra": {
        "branch-alias": {
            "dev-master": "1.x-dev"
        }
    },
    "config": {
        "allow-plugins": {
            "infection/extension-installer": true
        }
    }
}
